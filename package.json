{
  "name": "distraction_bookmarks",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start:frontend": "cd frontend && npm run dev",
    "start:electron": "electron-forge start",
    "start:dev": "cd frontend && npm run dev && cd .. && electron-forge start",
    "build:frontend": "cd frontend && npm run build && cd ..",
    "start:prod": "cd frontend && npm run build && cd.. && electron-forge start",
    "make": "npm run build:frontend && electron-forge make",
    "publish": "npm run build:frontend && electron-forge publish",
    "package": "npm run build:frontend && electron-forge package"
  },
  "build": {
    "appId": "com.omkar.distraction_bookmarks",
    "productName": "Distraction Bookmarks app",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "directories": {
      "output": "out"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "omkar-4",
    "repo": "distraction_bookmarks",
    "releaseType": "release"
  },
  "keywords": [],
  "author": "Omkar Iyer",
  "license": "ISC",
  "description": "A cross-platform desktop bookmark manager app using Electron, MERN stack, and Tailwind CSS for managing tasks with CRUD operations and file uploads.",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^9.0.0",
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.4",
    "sqlite3": "^5.1.7",
    "update-electron-app": "^3.0.0"
  },
  "repository": "https://github.com/omkar-4/distraction_bookmarks",
  "config": {
    "forge": "./forge.config.js"
  }
}
