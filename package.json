{
  "name": "distraction_bookmarks",
  "version": "1.0.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:frontend": "cd frontend && npm run dev",
    "start:electron": "electron .",
    "start:dev": "concurrently \"npm run start:frontend\" \"npm run start:electron\"",
    "start:prod": "npm run start:electron",
    "package": "electron-forge package",
    "make:frontend": "cd frontend && npm run build && cd ..",
    "make": "npm run make:frontend && electron-forge make"
  },
  "build": {
    "appId": "com.omkar.distraction_bookmarks",
    "productName": "Distraction Bookmarks app",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "directories": {
      "output": "out"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "omkar-4",
    "releaseType": "release"
  },
  "keywords": [],
  "author": "Omkar Iyer",
  "license": "ISC",
  "description": "A cross-platform desktop bookmark manager app using Electron, MERN stack, and Tailwind CSS for managing tasks with CRUD operations and file uploads.",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^9.0.0",
    "electron": "^32.0.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-builder": "^25.0.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.4",
    "sqlite3": "^5.1.7",
    "update-electron-app": "^3.0.0"
  },
  "repository": "https://github.com/omkar-4/distraction_bookmarks"
}
